/* pages/detail/detail.wxss */
.book_info {
    display: flex;
    padding: 10rpx;
    align-items: center;
}
.cover {
    width: 150rpx;
    height: 200rpx;
    padding: 50rpx;
}

.weui-media-box__desc {
    padding: 2rpx 0;
    -webkit-line-clamp: 1;
}

.weui-media-box__title {
    padding: 10rpx 0;
}

.book_intro {
    padding: 60rpx;
    color: #999;
    font-size: 13px;
    line-height: 1.7;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.action_area {
    display: flex;
    align-items: center;
    width: 500rpx;
}

.weui-btn {
    margin-top: 0;
    font-size: 15px;
}
